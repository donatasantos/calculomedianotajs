/* Notas de alunos tiradas na faculdade - Calcular media e classificacao.
Média = (nota1 + nota2 + nota3) / 3;

Classificação:
-Média menor que 5 - reoprovação;
-Média entre 5 e 7 - recuperação;
-média acima de 7 - passou de semestre;

*/

const nota1 = 5;
const nota2 = 3;
const nota3 = 7;
const media = (nota1 + nota2 + nota3) / 3;
console.log(media);

if (media < 5){
    console.log('Reprovação');
}else if (media >= 5 && media <=7){
    console.log('Recuperação');
}else{ 
    console.log('Passou');
} //Recuperação
